<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Layer (Gray) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <!-- Radius should be half of the progress bar's height (12dp / 2 = 6dp) -->
            <corners android:radius="6dp" />
            <solid android:color="#D3D3D3" /> <!-- Light Gray color -->
        </shape>
    </item>

    <!-- Progress Layer (Blue) using a Scale Drawable -->
    <item android:id="@android:id/progress">
        <!--
            The <scale> drawable shrinks the entire progress shape horizontally.
            This preserves the rounded corners at both ends.
            'scaleGravity="left"' makes it grow from left to right.
        -->
        <scale android:scaleWidth="100%"
            android:scaleGravity="left">
            <shape android:shape="rectangle">
                <corners android:radius="6dp" />
                <solid android:color="#007BFF" /> <!-- A nice Blue color -->
            </shape>
        </scale>
    </item>

</layer-list>
