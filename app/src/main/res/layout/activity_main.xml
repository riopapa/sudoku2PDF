<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수도쿠 만들기 by 하원철"
            />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:theme="@style/AppTheme.AppBarOverlay">
    </com.google.android.material.appbar.AppBarLayout>

    <!--    Left for level -->
    <TextView
        android:id="@+id/spacesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="How many\nBlanks \?"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/quizLabel"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/quizLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="How many\nQuiz \?"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/spacesLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/wheel_quiz"
        app:layout_constraintBottom_toTopOf="@id/progress_frame"
        />

    <FrameLayout
        android:id="@+id/progress_frame"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line"
        app:layout_constraintBottom_toTopOf="@id/frmCase1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ProgressBar
            android:id="@+id/progress_circle"
            android:visibility="invisible"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:max="100"
            android:progress="40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressDrawable="@drawable/circle"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/center"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:gravity="center"
            android:text="status"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="64dp"
            app:layout_constraintTop_toTopOf="@id/center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
<!--        app:layout_constraintTop_toBottomOf="@id/horizontal_line"-->

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frmCase1"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height = "wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@id/frmCase2"
        >
        <TextView
            android:id = "@+id/case1Load"
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "8sp"
            android:text = "Load"
            android:textSize = "16sp"
            android:textStyle = "bold"
            android:layout_marginBottom="80dp"
            android:layout_gravity="left"
            />
        <TextView
            android:id="@+id/case1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:layout_marginBottom="24dp"
            android:text="case 2"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id = "@+id/case1Save"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin= "8sp"
            android:text = "Save"
            android:textSize = "16sp"
            android:textStyle = "bold"
            android:layout_gravity="right"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frmCase2"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height = "wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toTopOf="@id/mesh"
        >
        <TextView
            android:id = "@+id/case2Load"
            android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "8sp"
            android:text = "Load"
            android:textSize = "16sp"
            android:textStyle = "bold"
            android:layout_marginBottom="80dp"
            android:layout_gravity="left"
        />
        <TextView
            android:id="@+id/case2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:layout_marginBottom="24dp"
            android:text="case 2"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
        />
        <TextView
            android:id = "@+id/case2Save"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin= "8sp"
            android:text = "Save"
            android:textSize = "16sp"
            android:textStyle = "bold"
            android:layout_gravity="right"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/llAnswer"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/llDarkness"
        app:layout_constraintTop_toTopOf="@id/generate"
        app:layout_constraintBottom_toBottomOf="@id/generate"
        >
        <TextView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text="With\nAnswer"
            android:textSize="12sp"
            android:textColor="#000"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/makeAnswer"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llDarkness"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/llAnswer"
        app:layout_constraintRight_toLeftOf="@id/mesh"
        app:layout_constraintTop_toTopOf="@id/generate"
        app:layout_constraintBottom_toBottomOf="@id/generate"
        >
        <TextView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text="진한정도"
            android:textSize="12sp"
            android:textColor="#000"
            />
        <EditText
            android:id="@+id/dark"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "255"
            android:text="200"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            android:autofillHints = "255" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/mesh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/mesh2_on"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@id/llDarkness"
        app:layout_constraintRight_toLeftOf="@id/llTwoThree"
        app:layout_constraintTop_toTopOf="@id/generate"
        app:layout_constraintBottom_toBottomOf="@id/generate"
        />
    <LinearLayout
        android:id="@+id/llTwoThree"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/mesh"
        app:layout_constraintEnd_toStartOf="@id/generate"
        app:layout_constraintTop_toTopOf="@id/generate"
        app:layout_constraintBottom_toBottomOf="@id/generate"
        >
        <TextView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:text="페이지당"
            android:textSize="12sp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/two_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2/page"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <ImageButton
        android:id = "@+id/generate"
        android:layout_width = "48dp"
        android:layout_height = "48dp"
        android:layout_marginTop = "16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom = "50dp"
        android:background = "@android:color/transparent"
        android:src = "@mipmap/icon_sudoku2pdf"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/progress_frame" />

    <com.riopapa.sudoku2pdf.WheelView
        android:id="@+id/wheel_blanks"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:wv_textSize="24sp"
        app:wv_textBoundaryMargin="10dp"
        app:wv_lineSpacing="20dp"
        app:wv_visibleItems="5"
        app:wv_selectedItemPosition="4"
        app:wv_normalItemTextColor="@color/colorPrimaryDark"
        app:wv_selectedItemTextColor="@color/colorPrimary"
        app:wv_showDivider="true"
        app:wv_dividerColor="@color/colorPrimary"
        app:wv_dividerHeight="2dp"
        app:wv_dividerType="fill"
        app:wv_drawSelectedRect="true"
        app:wv_selectedRectColor="#aebfbe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/wheel_quiz"
        app:layout_constraintTop_toBottomOf="@id/spacesLabel"
        />

    <com.riopapa.sudoku2pdf.WheelView
        android:id="@+id/wheel_quiz"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:wv_textSize="24sp"
        app:wv_textBoundaryMargin="10dp"
        app:wv_lineSpacing="20dp"
        app:wv_visibleItems="5"
        app:wv_selectedItemPosition="4"
        app:wv_normalItemTextColor="@color/colorPrimaryDark"
        app:wv_selectedItemTextColor="@color/colorPrimary"
        app:wv_showDivider="true"
        app:wv_dividerColor="@color/colorPrimary"
        app:wv_dividerHeight="2dp"
        app:wv_dividerType="fill"

        app:wv_drawSelectedRect="true"
        app:wv_selectedRectColor="#aebfbe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/wheel_blanks"
        app:layout_constraintTop_toBottomOf="@id/quizLabel"
        />

</androidx.constraintlayout.widget.ConstraintLayout>