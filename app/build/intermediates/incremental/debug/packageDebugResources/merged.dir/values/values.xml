<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="WiseriaPurple">#C6AEC7</color>
    <color name="background">@color/WiseriaPurple</color>
    <color name="colorAccent">#D81B60</color>
    <color name="colorPrimary">#008577</color>
    <color name="colorPrimaryDark">#00574B</color>
    <dimen name="fab_margin">16dp</dimen>
    <string name="action_settings">Settings</string>
    <string name="app_name">sudoku2PDF</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <declare-styleable name="WheelView">
        
        <attr format="dimension" name="wv_textSize"/>
        
        <attr format="boolean" name="wv_autoFitTextSize"/>
        
        <attr format="enum" name="wv_textAlign">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        
        <attr format="dimension" name="wv_textBoundaryMargin"/>
        
        <attr format="color" name="wv_normalItemTextColor"/>
        
        <attr format="color" name="wv_selectedItemTextColor"/>
        
        <attr format="dimension" name="wv_lineSpacing"/>
        
        <attr format="boolean" name="wv_integerNeedFormat"/>
        
        <attr format="string" name="wv_integerFormat"/>

        
        <attr format="integer" name="wv_visibleItems"/>
        
        <attr format="integer" name="wv_selectedItemPosition"/>
        
        <attr format="boolean" name="wv_cyclic"/>

        
        <attr format="boolean" name="wv_showDivider"/>
        
        <attr format="enum" name="wv_dividerType">
            <enum name="fill" value="0"/>
            <enum name="wrap" value="1"/>
        </attr>
        
        <attr format="color" name="wv_dividerColor"/>
        
        <attr format="dimension" name="wv_dividerHeight"/>
        
        <attr format="dimension" name="wv_dividerPaddingForWrap"/>


        
        <attr format="boolean" name="wv_curved"/>
        
        <attr format="enum" name="wv_curvedArcDirection">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        
        <attr format="float" name="wv_curvedArcDirectionFactor"/>
        
        <attr format="float" name="wv_refractRatio"/>
        
        <attr format="float" name="wv_curvedRefractRatio"/>

        
        <attr format="boolean" name="wv_drawSelectedRect"/>
        
        <attr format="color" name="wv_selectedRectColor"/>
        
        <attr format="dimension" name="wv_dividerOffset"/>
    </declare-styleable>
</resources>